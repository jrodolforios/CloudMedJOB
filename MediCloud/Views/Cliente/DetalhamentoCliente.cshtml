<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='/assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
</script>

<script src="/assets/js/jquery-ui.min.js"></script>
<script src="/assets/js/bootstrap-datepicker.min.js"></script>
<script src="/assets/js/jquery.maskedinput.min.js"></script>
<script src="/assets/js/jquery.ui.touch-punch.min.js"></script>
<script src="/assets/js/ace-elements.min.js"></script>
<script src="/assets/js/ace.min.js"></script>
<script type="text/javascript">
    function excluirUsuario(codigo) {
        confirmDeleteModal(codigo);
    }

    function excluirContato(codigo) {
        confirmDeleteModalContato(codigo);
    }

    function confirmDeleteModalContato(codigo) {
        $('#confirmContato').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#deleteContato', function () {
                deletarContato(codigo);
            });
    }

    function detalhamentoDoContato(codigo) {
        $('#detalhamentoContato').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#salvarContato', function () {
                salvarContato(codigo);
            });
    }

    function salvarContato(codigo){
        //AJAX de salvamento
    }

    function deletarContato(codigo) {
        $.ajax({
            url: '/Contato/DeletarContato?codigoDoContato=' + codigo,
            type: "post",
            cache: false,
            success: function (savingStatus) {
                var tipoAlert;
                if (savingStatus.acaoBemSucedida) {
                    tipoAlert = 'alert-success';
                    $("#" + codigo).remove();
                }
                else
                    tipoAlert = 'alert-danger';
                $('#usuarioAlerts').html('<div class="alert ' + tipoAlert + '"><a class="close" data-dismiss="alert">×</a><span>' + savingStatus.mensagem + '</span></div>');
            },
            error: function (xhr, ajaxOptions, thrownError) {
                $('#usuarioAlerts').html('<div class="alert alert-danger"><a class="close" data-dismiss="alert">×</a><span>Ops! Não foi possível deletar este registro no servidor. Contate-nos para que possamos te ajudar melhor.</span></div>')
            }
        });
    }


    function confirmDeleteModal(codigo) {
        $('#confirm').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#delete', function () {
                window.location = "/Cliente/ExcluirCliente?codigoCliente=" + codigo;
            });
    }

    $("#Contador").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/Contador/BuscaContadorAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        $('#idContador').attr('value', item.Id);
                        return { label: item.Name, value: item.Name };
                    }))

                }
            })
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#Contador').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idContador').attr('value', 0);  // clear the textbox
        }
    });

    $("#elaboradorPCMSO").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/ElaboradorPCMSO/BuscaElaboradorAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        $('#idElaboradorPCMSO').attr('value', item.Id);
                        return { label: item.Name, value: item.Name };
                    }))

                }
            })
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#elaboradorPCMSO').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idElaboradorPCMSO').attr('value', 0);  // clear the textbox
        }
    });


    $("#elaboradorPPRA").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/ElaboradorPPRA/BuscaElaboradorAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        $('#idElaboradorPPRA').attr('value', item.Id);
                        return { label: item.Name, value: item.Name };
                    }))

                }
            })
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#elaboradorPPRA').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idElaboradorPPRA').attr('value', 0);  // clear the textbox
        }
    });


    $("#segmento").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/Segmento/BuscaSegmentoAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        $('#idSegmento ').attr('value', item.Id);
                        return { label: item.Name, value: item.Name };
                    }))

                }
            })
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#segmento').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idSegmento').attr('value', 0);  // clear the textbox
        }
    });

    $("#limparForm").click(function () {
        var cntreq3 = 0;
        var cntvals3 = 0;
        $(".componenteFormulario").each(atualizarProgressBar());
    });

    $('#CEP').mask('99999-999');

    $(document).ready(function () {
        $('input').on('change', function () {
            var cntreq = 0;
            var cntvals = 0;
            $(".componenteFormulario").each(atualizarProgressBar());
        });

        var cntreq3 = 0;
        var cntvals3 = 0;
        $(".componenteFormulario").each(atualizarProgressBar());

    });

    function atualizarProgressBar() {
        var cntreq = 0;
        var cntvals = 0;
        $(".componenteFormulario").each(function (val) {
            cntreq++;
            if ($(this).val() != '') {
                cntvals++;
            }
        });
        var count = (cntvals / cntreq) * 100;
        count = parseInt(count);
        $('.formPercent').empty();
        $('.progress-striped').attr("data-percent", count + '%');
        $('div.progress-bar-success').attr("style", "width: " + count + '%');
        $('.formPercent').append(count + '% ');
    }
</script>
