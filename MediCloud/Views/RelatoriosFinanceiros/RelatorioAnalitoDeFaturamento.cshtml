            })
        },
        select: function (event, ui) {
            $('#idFaturamento').attr('value', ui.item.Id);
            $('#Faturamento').val(ui.item.label);
            return false;
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#Faturamento').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idFaturamento').attr('value', 0);  // clear the textbox
        }
    });
</script>
