@model MediCloud.Models.Parametro.DadosOcupacionaisModel
    @{
        string checkedNaoDeseja = string.Empty;
        bool DadosOcupacionaisNovo = true;

        ViewBag.Title = "DadosOcupacionais";

        if (Model != null)
        {
            checkedNaoDeseja = Model.NaoDeseja ? "checked" : string.Empty;
            DadosOcupacionaisNovo = false;
        }
    }
    <script src="/assets/js/jquery-2.1.4.min.js"></script>
    <div class="page-header">
        <h1>
            Detalhamento de DadosOcupacionais
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Cadastro de DadosOcupacionais
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <div id="user-profile-3" class="user-profile row">
                <div class="col-sm-offset-1 col-sm-10">
                    <div class="well well-sm">
                        <!-- -
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        &nbsp; -->
                        <div class="inline middle blue bigger-110"> <span class="formPercent">0%</span> do cadastro concluído </div>

                        &nbsp; &nbsp; &nbsp;
                        <div style="width:200px;" data-percent="70%" class="inline middle no-margin progress progress-striped active pos-rel">
                            <div class="progress-bar progress-bar-success" style="width:70%"></div>
                        </div>

                    </div><!-- /.well -->
                    <div class="row">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username"><span class="badge badge-important mail-tag"></span>Obrigatório</label>
                    </div>

                    <div class="space"></div>
                    <form method="post" autocomplete="off" class="form-horizontal" action="@Url.Content("~/DadosOcupacionais/DetalhamentoDadosOcupacionais")">
                        <input type="hidden" id="codigoDadosOcupacionais" name="codigoDadosOcupacionais" value="@Html.ValueFor(x => x.IdClienteOcupacional)" />
                        <div class="tabbable">
                            <ul class="nav nav-tabs padding-16">
                                <li class="active">
                                    <a data-toggle="tab" href="#edit-basic">
                                        <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                                        Cadastro
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content profile-edit-tab-content">
                            <div id="edit-basic" class="tab-pane in active">
                                <h4 class="header blue bolder smaller">Dados ocupacionais</h4>
                                    <div class="vspace-12-sm"></div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Cliente &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                        <div class="col-sm-8">
                                            <input type="hidden" name="idCliente" id="idCliente" value="@Html.ValueFor(x => x.Cliente.IdCliente)" />
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="ace-icon fa fa-search"></i>
                                                </span>
                                                <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="cliente" name="cliente" placeholder="Digite o nome do cliente" value="@Html.ValueFor(x => x.Cliente.RazaoSocial)" />
                                            </div>
                                        </div>
                                    </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Não Deseja</label>

                                    <div class="col-sm-8 ">
                                        <div class="checkbox">
                                            <label>
                                                <input name="naoDeseja" type="checkbox" class="ace" @checkedNaoDeseja />
                                                <span class="lbl"> &nbsp;</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Código NEXO </label>

                                    <div class="col-sm-8">
                                        <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="codigoNexo" name="codigoNexo" placeholder="login do usuário" value="@Html.ValueFor(x => x.CodigoNexo)" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-date">Emissão</label>

                                    <div class="col-sm-8">
                                        <div class="input-medium">
                                            <div class="input-group">
                                                <input class="input-medium date-picker input-mask-date" id="emissao" name="emissao" type="text" data-date-format="dd/mm/yyyy" placeholder="dd/mm/yyyy" value="@Html.ValueFor(x => x.Emissao)" />
                                                <span class="input-group-addon">
                                                    <i class="ace-icon fa fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-date">Vencimento</label>

                                    <div class="col-sm-8">
                                        <div class="input-medium">
                                            <div class="input-group">
                                                <input class="input-medium date-picker input-mask-date" id="vencimento" name="vencimento" type="text" data-date-format="dd/mm/yyyy" placeholder="dd/mm/yyyy" value="@Html.ValueFor(x => x.Vencimento)" />
                                                <span class="input-group-addon">
                                                    <i class="ace-icon fa fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Elaborador (PCMSO) </label>

                                    <div class="col-sm-8">
                                        <input type="hidden" name="idElaboradorPCMSO" id="idElaboradorPCMSO" value="@Html.ValueFor(x => x.ElaboradorPCMSO.IdElaboradorPCMSO)" />
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-search"></i>
                                            </span>
                                            <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="elaboradorPCMSO" name="elaboradorPCMSO" placeholder="Digite o nome do Elaborador (PCMSO)" value="@Html.ValueFor(x => x.ElaboradorPCMSO.NomeElaboradorPCMSO)" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Elaborador (PPRA) </label>

                                    <div class="col-sm-8">
                                        <input type="hidden" name="idElaboradorPPRA" id="idElaboradorPPRA" value="@Html.ValueFor(x => x.ElaboradorPPRA.IdElaboradorPPRA)" />
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="ace-icon fa fa-search"></i>
                                            </span>
                                            <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="elaboradorPPRA" name="elaboradorPPRA" placeholder="Digite o nome do Elaborador (PPRA)" value="@Html.ValueFor(x => x.ElaboradorPPRA.NomeElaboradorDoPPRA)" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Status do PCMSO &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                    <div class="col-sm-8">
                                        <select class="chosen-select form-control" id="tipoPCMSO" name="tipoPCMSO" data-placeholder="Selecione um...">
                                            <option value="0">.:Selecione:.</option>
                                            <option value="1">PCMSO do CMT</option>
                                                <option value="2">PCMSO de terceiros</option>
                                        </select>
                                        <script type="text/javascript">
                                            $('#tipoPCMSO').val('@(Model != null ? (int)Model.StatusPCMSOSel : 0)');
                                        </script>

                                    </div>
                                </div>

                                <h4 class="header blue bolder smaller">Observações</h4>
                                <div class="vspace-12-sm"></div>

                                <div class="form-group">

                                    <div class="col-sm-12">
                                        <textarea class="col-sm-12 componenteFormulario" id="observacoes" name="observacoes" placeholder="observações adicionais">@Html.ValueFor(x => x.Observacao)</textarea>
                                    </div>
                                </div>

                                <div class="clearfix form-actions">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn btn-info" type="submit">
                                            <i class="ace-icon fa fa-check bigger-110"></i>
                                            Salvar
                                        </button>
                                        @if (DadosOcupacionaisNovo)
                                        {
                                            <span>&nbsp; &nbsp;</span>
                                            <button class="btn" type="reset" id="limparForm">
                                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                                Limpar
                                            </button>
                                        }
                                        else
                                        {
                                            <span>&nbsp; &nbsp;</span>
                                            <a href="javascript:excluirDadosOcupacionais(@Model.IdClienteOcupacional)" class="btn btn-danger" type="reset">
                                                <i class="ace-icon fa fa-times bigger-110"></i>
                                                Excluir
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div><!-- /.span -->
            </div>
        </div>
    </div>

    <div id="confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="smaller lighter blue no-margin">Excluir dados ocupacionais</h3>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja excluir este dados ocupacionais?
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">
                        <i class="ace-icon fa fa-check"></i>
                        Sim
                    </button>
                    <button type="button" data-dismiss="modal" class="btn">
                        <i class="ace-icon fa fa-times"></i>
                        Não
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/jquery-ui.min.js"></script>
    <script src="/assets/js/bootstrap-datepicker.min.js"></script>
    <script src="/assets/js/jquery.maskedinput.min.js"></script>
    <script src="/assets/js/jquery.ui.touch-punch.min.js"></script>
    <script src="/assets/js/ace-elements.min.js"></script>
    <script src="/assets/js/ace.min.js"></script>
    <script type="text/javascript">
        function excluirDadosOcupacionais(codigo) {
            confirmDeleteModal(codigo);
        }

        function confirmDeleteModal(codigo) {
            $('#confirm').modal({
                backdrop: 'static',
                keyboard: false
            })
                .one('click', '#delete', function () {
                    window.location = "/DadosOcupacionais/ExcluirDadosOcupacionais?codigoDadosOcupacionais=" + codigo;
                });
        }

        $("#limparForm").click(function () {
            var cntreq3 = 0;
            var cntvals3 = 0;
            $(".componenteFormulario").each(atualizarProgressBar());
        });

        $(document).ready(function () {
            $('input').on('change', function () {
                var cntreq = 0;
                var cntvals = 0;
                $(".componenteFormulario").each(atualizarProgressBar());
            });

            var cntreq3 = 0;
            var cntvals3 = 0;
            $(".componenteFormulario").each(atualizarProgressBar());

        });

        function atualizarProgressBar() {
            var cntreq = 0;
            var cntvals = 0;
            $(".componenteFormulario").each(function (val) {
                cntreq++;
                if ($(this).val() != '') {
                    cntvals++;
                }
            });
            var count = (cntvals / cntreq) * 100;
            count = parseInt(count);
            $('.formPercent').empty();
            $('.progress-striped').attr("data-percent", count + '%');
            $('div.progress-bar-success').attr("style", "width: " + count + '%');
            $('.formPercent').append(count + '% ');
        }

        $("#cliente").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Cliente/BuscaClienteAJAX",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Name, value: item.Name, Id: item.Id };
                        }))

                    }
                })
            },
            select: function (event, ui) {
                $('#idCliente').attr('value', ui.item.Id);
                $('#cliente').val(ui.item.label);
                return false;
            },
            messages: {
                noResults: "Sem resultados", results: ""
            }
        });
        $('#cliente').on('blur', function () {
            if ($(this).val().length === 0) {  //check for no. of characters entered
                $('#idCliente').attr('value', 0);  // clear the textbox
            }
        });

        $("#elaboradorPCMSO").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/ElaboradorPCMSO/BuscaElaboradorAJAX",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Name, value: item.Name, Id: item.Id };
                        }))

                    }
                })
            },
            select: function (event, ui) {
                $('#idElaboradorPCMSO').attr('value', ui.item.Id);
                $('#elaboradorPCMSO').val(ui.item.label);
                return false;
            },
            messages: {
                noResults: "Sem resultados", results: ""
            }
        });
        $('#elaboradorPCMSO').on('blur', function () {
            if ($(this).val().length === 0) {  //check for no. of characters entered
                $('#idElaboradorPCMSO').attr('value', 0);  // clear the textbox
            }
        });

        $("#elaboradorPPRA").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/ElaboradorPPRA/BuscaElaboradorAJAX",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Name, value: item.Name, Id: item.Id };
                        }))

                    }
                })
            },
            select: function (event, ui) {
                $('#idElaboradorPPRA').attr('value', ui.item.Id);
                $('#elaboradorPPRA').val(ui.item.label);
                return false;
            },
            messages: {
                noResults: "Sem resultados", results: ""
            }
        });
        $('#elaboradorPPRA').on('blur', function () {
            if ($(this).val().length === 0) {  //check for no. of characters entered
                $('#idElaboradorPPRA').attr('value', 0);  // clear the textbox
            }
        });


        $('.date-picker').datepicker({
            format: 'dd/mm/yyyy',
            language: 'pt-BR',
        });
        $('.input-mask-date').mask('99/99/9999');
    </script>
