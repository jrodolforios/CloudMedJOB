@model MediCloud.Models.Recomendacao.RecomendacaoModel
@{
    string checkedInativo = string.Empty;
    bool RecomendacaoNovo = true;

    ViewBag.Title = "Recomendação";

    if (Model != null)
    {
        RecomendacaoNovo = false;
    }
}
<script src="/assets/js/jquery-2.1.4.min.js"></script>
<script src="/assets/js/jquery-ui.min.js"></script>
<script src="/assets/js/bootstrap-datepicker.min.js"></script>
<script src="/assets/js/jquery.maskedinput.min.js"></script>
<script src="/assets/js/jquery.ui.touch-punch.min.js"></script>
<script src="/assets/js/ace-elements.min.js"></script>
<script src="/assets/js/ace.min.js"></script>

<div class="page-header">
    <h1>
        Detalhamento de recomendação
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Cadastro de recomendação
        </small>
    </h1>
</div><!-- /.page-header -->
<div id="recomendacaoAlerts"></div>
<div class="row">
    <div class="col-xs-12">
        <div id="user-profile-3" class="user-profile row">
            <div class="col-sm-offset-1 col-sm-10">
                <div class="well well-sm">
                    <!-- -
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    &nbsp; -->
                    <div class="inline middle blue bigger-110"> <span class="formPercent">0%</span> do cadastro concluído </div>

                    &nbsp; &nbsp; &nbsp;
                    <div style="width:200px;" data-percent="70%" class="inline middle no-margin progress progress-striped active pos-rel">
                        <div class="progress-bar progress-bar-success" style="width:70%"></div>
                    </div>

                </div><!-- /.well -->
                <div class="row">
                    <label class="col-sm-4 control-label no-padding-right" for="form-field-username"><span class="badge badge-important mail-tag"></span>Obrigatório</label>
                </div>

                <div class="space"></div>
                <form method="post" class="form-horizontal" action="@Url.Content("~/Recomendacao/DetalhamentoRecomendacao")">
                    <input type="hidden" id="codigoRecomendacao" name="codigoRecomendacao" value="@Html.ValueFor(x => x.IdRecomendacao)" />
                    <div class="tabbable">
                        <ul class="nav nav-tabs padding-16">
                            <li class="active">
                                <a data-toggle="tab" href="#edit-basic">
                                    <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                                    Cadastro
                                </a>
                            </li>

                            <li>
                                <a data-toggle="tab" href="#edit-risk">
                                    <i class="red ace-icon fa fa-exclamation-triangle bigger-125"></i>
                                    Riscos
                                </a>
                            </li>

                            <li>
                                <a data-toggle="tab" href="#edit-procedure">
                                    <i class="blue ace-icon fa fa-cog bigger-125"></i>
                                    Procedimentos
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content profile-edit-tab-content">
                        <div id="edit-basic" class="tab-pane fade in active">
                            <h4 class="header blue bolder smaller">Dados da recomendação</h4>
                            <div class="vspace-12-sm"></div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Cargo &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input type="hidden" name="idCargo" id="idCargo" value="@Html.ValueFor(x => x.Cargo.IdCargo)" />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="cargo" name="cargo" placeholder="Digite o cargo do funcionário" value="@Html.ValueFor(x => x.Cargo.NomeCargo)" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Cliente &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input type="hidden" name="idCliente" id="idCliente" value="@Html.ValueFor(x => x.Cliente.IdCliente)" />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="cliente" name="cliente" placeholder="Digite o nome do cliente" value="@Html.ValueFor(x => x.Cliente.RazaoSocial)" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Setor &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input type="hidden" name="idSetor" id="idSetor" value="@Html.ValueFor(x => x.Setor.IdSetor)" />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="setor" name="setor" placeholder="Digite o setor" value="@Html.ValueFor(x => x.Setor.NomeSetor)" />
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix form-actions">
                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-info" type="submit">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Salvar
                                    </button>
                                    @if (RecomendacaoNovo)
                                    {
                                        <span>&nbsp; &nbsp;</span>
                                        <button class="btn" type="reset" id="limparForm">
                                            <i class="ace-icon fa fa-undo bigger-110"></i>
                                            Limpar
                                        </button>
                                    }
                                    else
                                    {
                                        <span>&nbsp; &nbsp;</span>
                                        <a href="javascript:excluirRecomendacao(@Model.IdRecomendacao)" class="btn btn-danger" type="reset">
                                            <i class="ace-icon fa fa-times bigger-110"></i>
                                            Excluir
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div id="edit-risk" class="tab-pane in fade">
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Adicionar risco</label>

                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6" type="text" id="risco" name="risco" placeholder="Insira um risco" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="row" id="risks">
                                <h4 class="header blue bolder smaller">Riscos desta recomendação</h4>
                                <div class="vspace-12-sm"></div>
                                @if (Model != null && Model.Riscos.Any())
                                {
                                    foreach (MediCloud.Models.Recomendacao.RiscoModel item in Model.Riscos)
                                    {
                                        <div class="col-xs-12" id="@item.IdRisco">
                                            <div class="media search-media">
                                                <div class="media-body">
                                                    <h4 class="media-heading">
                                                        <span class="blue">@item.NomeRisco</span>
                                                    </h4>
                                                    <p><b>Natureza:</b> @item.Natureza.NomeNatureza<br /> <b>Eventualidade:</b> @item.Eventualidade.ToString()</p>

                                                    <div class="search-actions text-center">
                                                        <span class="blue bolder bigger-110">Ações</span>

                                                        <div class="action-buttons bigger-150">
                                                            <a href="javascript:excluirRisco(@item.IdRisco);">
                                                                <i class="ace-icon fa fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-block alert-info">
                                        Nenhum risco para ser exibido.
                                    </div>
                                }
                            </div>
                        </div>

                        <div id="edit-procedure" class="tab-pane in fade">
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Adicionar Referência</label>

                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6" type="text" id="referencia" name="referencia" placeholder="Insira uma referência" value="" />
                                    </div>
                                </div>
                            </div>
                            @if (Model != null && Model.ReferenciasProcedimentos.Any())
                            {
                                foreach (var item in Model.ReferenciasProcedimentos)
                                {
                                    <div class="row">
                                        <h4 class="header blue bolder smaller">
                                            @item.Key.NomeReferencia
                                            @if (item.Value.Count <= 0)
                                            {
                                                <a href="javascript:excluirReferencia(@item.Key.IdReferencia, @Model.IdRecomendacao);">
                                                    <i class="ace-icon fa fa-trash"></i>
                                                </a>
                                            }
                                        </h4>
                                        <div class="vspace-12-sm"></div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label no-padding-right" for="form-field-first">Adicionar procedimento</label>

                                            <div class="col-sm-10">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="ace-icon fa fa-search"></i>
                                                    </span>
                                                    <input class="col-xs-12 col-sm-4" type="text" id="procedimento@(item.Key.IdReferencia)@(Model.IdRecomendacao)" name="procedimento@(item.Key.IdReferencia)@(Model.IdRecomendacao)" placeholder="Insira um procedimento" value="" />
                                                </div>
                                            </div>

                                            <script type="text/javascript">
                                                    $("#procedimento@(item.Key.IdReferencia)@(Model.IdRecomendacao)").autocomplete({
                                                        source: function (request, response) {
                                                            $.ajax({
                                                                url: "/Procedimento/BuscarProcedimentoAJAX",
                                                                type: "POST",
                                                                dataType: "json",
                                                                data: { Prefix: request.term },
                                                                success: function (data) {
                                                                    response($.map(data, function (item) {
                                                                        return { label: item.Name, value: item.Name, Id: item.Id, Value: item.Value };
                                                                    }))
                                                                }
                                                            })
                                                        },
                                                        select: function (event, ui) {
                                                            $('#procedimento@(item.Key.IdReferencia)@(Model.IdRecomendacao)').val('');

                                                            $.ajax({
                                                                url: '/Recomendacao/AdicionarProcedimento?codigoRecomendacao=' + '@Model.IdRecomendacao' + "&codigoProcedimento=" + ui.item.Id + "&codigoReferente=" + @item.Key.IdReferencia,
                                                                type: "post",
                                                                cache: false,
                                                                success: function (savingStatus) {
                                                                    var tipoAlert;
                                                                    if (savingStatus.acaoBemSucedida)
                                                                        tipoAlert = 'alert-success';
                                                                    else
                                                                        tipoAlert = 'alert-danger';
                                                                    $('#ProcedimentoRecomendacao@(item.Key.IdReferencia)@(Model.IdRecomendacao)').load("/Recomendacao/DetalhamentoRecomendacao?codigoRecomendacao=" + $("#codigoRecomendacao").val()  + ' #ProcedimentoRecomendacao@(item.Key.IdReferencia)@(Model.IdRecomendacao)');
                                                                    $('#recomendacaoAlerts').html('<div class="alert ' + tipoAlert + '"><a class="close" data-dismiss="alert">×</a><span>' + savingStatus.mensagem + '</span></div>');
                                                                },
                                                                error: function (xhr, ajaxOptions, thrownError) {
                                                                    $('#recomendacaoAlerts').html('<div class="alert alert-danger"><a class="close" data-dismiss="alert">×</a><span>Ops! Não foi possível bloquear este usuário no servidor. Contate-nos para que possamos te ajudar melhor.</span></div>')
                                                                }
                                                            });
                                                            return false;
                                                        },
                                                        messages: {
                                                            noResults: "Sem resultados", results: ""
                                                        }
                                                    });
                                                    $('#procedimento@(item.Key.IdReferencia)@(Model.IdRecomendacao)').on('blur', function () {
                                                        if ($(this).val().length === 0) {  //check for no. of characters entered
                                                            $('#procedimento@(item.Key.IdReferencia)@(Model.IdRecomendacao)').attr('value', '');  // clear the textbox
                                                        }
                                                    });
                                            </script>

                                        </div>
                                        <div id="ProcedimentoRecomendacao@(item.Key.IdReferencia)@(Model.IdRecomendacao)">
                                            @if (item.Value.Count > 0)
                                            {
                                                foreach (var itemProcedimento in item.Value)
                                                {
                                                    <div class="col-xs-12" id="@itemProcedimento.IdProcedimento">
                                                        <div class="media search-media">
                                                            <div class="media-body">
                                                                <h4 class="media-heading">
                                                                    <span class="blue">@itemProcedimento.Nome</span>
                                                                </h4>
                                                                <p><b>Complemento:</b> @itemProcedimento.Complemento<br /> <b>Sigla:</b> @itemProcedimento.Sigla</p>

                                                                <div class="search-actions text-center">
                                                                    <span class="blue bolder bigger-110">Ações</span>

                                                                    <div class="action-buttons bigger-150">
                                                                        <a href="javascript:excluirProcedimento(@itemProcedimento.IdProcedimento, @item.Key.IdReferencia, @Model.IdRecomendacao);">
                                                                            <i class="ace-icon fa fa-trash"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="alert alert-block alert-info">
                                                    Nenhum procedimento para ser exibido.
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-block alert-info">
                                    Nenhum item para ser exibido.
                                </div>
                            }
                        </div>
                    </div>
                </form>
            </div><!-- /.span -->
        </div>
    </div>
</div>

<div id="confirm" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Excluir usuário</h3>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir este usuário?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">
                    <i class="ace-icon fa fa-check"></i>
                    Sim
                </button>
                <button type="button" data-dismiss="modal" class="btn">
                    <i class="ace-icon fa fa-times"></i>
                    Não
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
                                                    function excluirRecomendacao(codigo) {
                                                        confirmDeleteModal(codigo);
                                                    }
                                                    function excluirReferencia(codigoReferencia, codigoRecomendacao) {
                                                        window.location = "/Recomendacao/ExcluirReferencia?codigoRecomendacao=" + codigoRecomendacao + "&codigoReferencia=" + codigoReferencia;
                                                    } 
                                                    function excluirRisco(codigo) {
                                                        $.ajax({
                                                            url: '/Recomendacao/DeletarRisco?codigoRecomendacao=' + $("#codigoRecomendacao").val() + "&codigoRisco=" + codigo,
                                                            type: "post",
                                                            cache: false,
                                                            success: function (savingStatus) {
                                                                var tipoAlert;
                                                                if (savingStatus.acaoBemSucedida)
                                                                    tipoAlert = 'alert-success';
                                                                else
                                                                    tipoAlert = 'alert-danger';
                                                                $('#risks').load("/Recomendacao/DetalhamentoRecomendacao?codigoRecomendacao=" + $("#codigoRecomendacao").val()  + ' #risks');
                                                                $('#recomendacaoAlerts').html('<div class="alert ' + tipoAlert + '"><a class="close" data-dismiss="alert">×</a><span>' + savingStatus.mensagem + '</span></div>');
                                                            },
                                                            error: function (xhr, ajaxOptions, thrownError) {
                                                                $('#recomendacaoAlerts').html('<div class="alert alert-danger"><a class="close" data-dismiss="alert">×</a><span>Ops! Não foi possível bloquear este usuário no servidor. Contate-nos para que possamos te ajudar melhor.</span></div>')
                                                            }
                                                        });
                                                    }

                                                    function excluirProcedimento(procedimento, referencia, recomendacao) {
                                                        $.ajax({
                                                            url: '/Recomendacao/DeletarProcedimento?codigoRecomendacao=' + recomendacao + "&codigoReferencia=" + referencia + "&codigoprocedimento=" + procedimento,
                                                            type: "post",
                                                            cache: false,
                                                            success: function (savingStatus) {
                                                                var tipoAlert;
                                                                if (savingStatus.acaoBemSucedida)
                                                                    tipoAlert = 'alert-success';
                                                                else
                                                                    tipoAlert = 'alert-danger';
                                                                $('#ProcedimentoRecomendacao' + referencia + recomendacao).load("/Recomendacao/DetalhamentoRecomendacao?codigoRecomendacao=" + $("#codigoRecomendacao").val() + ' #ProcedimentoRecomendacao' + referencia + recomendacao);

                                                                $('#recomendacaoAlerts').html('<div class="alert ' + tipoAlert + '"><a class="close" data-dismiss="alert">×</a><span>' + savingStatus.mensagem + '</span></div>');
                                                            },
                                                            error: function (xhr, ajaxOptions, thrownError) {
                                                                $('#recomendacaoAlerts').html('<div class="alert alert-danger"><a class="close" data-dismiss="alert">×</a><span>Ops! Não foi possível bloquear este usuário no servidor. Contate-nos para que possamos te ajudar melhor.</span></div>')
                                                            }
                                                        });
                                                    }

                                                    function confirmDeleteModal(codigo) {
                                                        $('#confirm').modal({
                                                            backdrop: 'static',
                                                            keyboard: false
                                                        })
                                                            .one('click', '#delete', function () {
                                                                window.location = "/Recomendacao/ExcluirRecomendacao?codigoRecomendacao=" + codigo;
                                                            });
                                                    }

                                                    $("#limparForm").click(function () {
                                                        var cntreq3 = 0;
                                                        var cntvals3 = 0;
                                                        $(".componenteFormulario").each(atualizarProgressBar());
                                                    });

                                                    $(document).ready(function () {
                                                        $('input').on('change', function () {
                                                            var cntreq = 0;
                                                            var cntvals = 0;
                                                            $(".componenteFormulario").each(atualizarProgressBar());
                                                        });

                                                        var cntreq3 = 0;
                                                        var cntvals3 = 0;
                                                        $(".componenteFormulario").each(atualizarProgressBar());

                                                    });

                                                    function atualizarProgressBar() {
                                                        var cntreq = 0;
                                                        var cntvals = 0;
                                                        $(".componenteFormulario").each(function (val) {
                                                            cntreq++;
                                                            if ($(this).val() != '') {
                                                                cntvals++;
                                                            }
                                                        });
                                                        var count = (cntvals / cntreq) * 100;
                                                        count = parseInt(count);
                                                        $('.formPercent').empty();
                                                        $('.progress-striped').attr("data-percent", count + '%');
                                                        $('div.progress-bar-success').attr("style", "width: " + count + '%');
                                                        $('.formPercent').append(count + '% ');
                                                    }

                                                    $("#cargo").autocomplete({
                                                        source: function (request, response) {
                                                            $.ajax({
                                                                url: "/Cargo/BuscaCargoAJAX",
                                                                type: "POST",
                                                                dataType: "json",
                                                                data: { Prefix: request.term },
                                                                success: function (data) {
                                                                    response($.map(data, function (item) {
                                                                        return { label: item.Name, value: item.Name, Id: item.Id };
                                                                    }))

                                                                }
                                                            })
                                                        },
                                                        select: function (event, ui) {
                                                            $('#idCargo').attr('value', ui.item.Id);
                                                            $('#cargo').val(ui.item.label);
                                                            return false;
                                                        },
                                                        messages: {
                                                            noResults: "Sem resultados", results: ""
                                                        }
                                                    });
                                                    $('#cargo').on('blur', function () {
                                                        if ($(this).val().length === 0) {  //check for no. of characters entered
                                                            $('#idCargo').attr('value', 0);  // clear the textbox
                                                        }
                                                    });

                                                    $("#cliente").autocomplete({
                                                        source: function (request, response) {
                                                            $.ajax({
                                                                url: "/Cliente/BuscaClienteAJAX",
                                                                type: "POST",
                                                                dataType: "json",
                                                                data: { Prefix: request.term },
                                                                success: function (data) {
                                                                    response($.map(data, function (item) {
                                                                        return { label: item.Name, value: item.Name, Id: item.Id };
                                                                    }))

                                                                }
                                                            })
                                                        },
                                                        select: function (event, ui) {
                                                            $('#idCliente').attr('value', ui.item.Id);
                                                            $('#cliente').val(ui.item.label);
                                                            return false;
                                                        },
                                                        messages: {
                                                            noResults: "Sem resultados", results: ""
                                                        }
                                                    });
                                                    $('#cliente').on('blur', function () {
                                                        if ($(this).val().length === 0) {  //check for no. of characters entered
                                                            $('#idCliente').attr('value', 0);  // clear the textbox
                                                        }
                                                    });

                                                    $("#setor").autocomplete({
                                                        source: function (request, response) {
                                                            $.ajax({
                                                                url: "/Setor/BuscaSetorAJAX",
                                                                type: "POST",
                                                                dataType: "json",
                                                                data: { Prefix: request.term },
                                                                success: function (data) {
                                                                    response($.map(data, function (item) {
                                                                        return { label: item.Name, value: item.Name, Id: item.Id };
                                                                    }))

                                                                }
                                                            })
                                                        },
                                                        select: function (event, ui) {
                                                            $('#idSetor').attr('value', ui.item.Id);
                                                            $('#setor').val(ui.item.label);
                                                            return false;
                                                        },
                                                        messages: {
                                                            noResults: "Sem resultados", results: ""
                                                        }
                                                    });
                                                    $('#setor').on('blur', function () {
                                                        if ($(this).val().length === 0) {  //check for no. of characters entered
                                                            $('#idSetor').attr('value', 0);  // clear the textbox
                                                        }
                                                    });

                                                    $("#risco").autocomplete({
                                                        source: function (request, response) {
                                                            $.ajax({
                                                                url: "/RiscoNatureza/BuscaRiscoAJAX",
                                                                type: "POST",
                                                                dataType: "json",
                                                                data: { Prefix: request.term },
                                                                success: function (data) {
                                                                    response($.map(data, function (item) {
                                                                        return { label: item.Name, value: item.Name, Id: item.Id };
                                                                    }))

                                                                }
                                                            })
                                                        },
                                                        select: function (event, ui) {
                                                            $('#risco').val('');

                                                            $.ajax({
                                                                url: '/Recomendacao/AdicionarRisco?codigoRecomendacao=' + $("#codigoRecomendacao").val() + "&codigoRisco=" + ui.item.Id,
                                                                type: "post",
                                                                cache: false,
                                                                success: function (savingStatus) {
                                                                    var tipoAlert;
                                                                    if (savingStatus.acaoBemSucedida)
                                                                        tipoAlert = 'alert-success';
                                                                    else
                                                                        tipoAlert = 'alert-danger';
