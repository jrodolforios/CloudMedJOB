                                                            $.ajax({
                                                                url: '/Recomendacao/AdicionarReferencia?codigoRecomendacao=' + $("#codigoRecomendacao").val() + "&codigoReferencia=" + ui.item.Id,
                                                                type: "post",
                                                                cache: false,
                                                                success: function (savingStatus) {
