@model MediCloud.Models.Parametro.GrupoProcedimento.ProcedimentoModel
@{
    string checkedConfirmarAutomaticamente = string.Empty;
    string checkedZerarAutomaticamente = string.Empty;
    bool ProcedimentoNovo = true;

    ViewBag.Title = "Procedimento";

    if (Model != null)
    {
        checkedZerarAutomaticamente = Model.ZeraAutomaticamente.HasValue ? (Model.ZeraAutomaticamente.Value ? "checked" : string.Empty) : string.Empty;
        checkedConfirmarAutomaticamente = Model.confirmaAutomaticamente.HasValue ? (Model.confirmaAutomaticamente.Value ? "checked" : string.Empty) : string.Empty;

        ProcedimentoNovo = false;
    }
}
<script src="/assets/js/jquery-2.1.4.min.js"></script>
<div class="page-header">
    <h1>
        Detalhamento de Procedimento
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Cadastro de Procedimento
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="row">
    <div class="col-xs-12">
        <div id="user-profile-3" class="user-profile row">
            <div class="col-sm-offset-1 col-sm-10">
                <div class="well well-sm">
                    <!-- -
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    &nbsp; -->
                    <div class="inline middle blue bigger-110"> <span class="formPercent">0%</span> do cadastro concluído </div>

                    &nbsp; &nbsp; &nbsp;
                    <div style="width:200px;" data-percent="70%" class="inline middle no-margin progress progress-striped active pos-rel">
                        <div class="progress-bar progress-bar-success" style="width:70%"></div>
                    </div>

                </div><!-- /.well -->
                <div class="row">
                    <label class="col-sm-4 control-label no-padding-right" for="form-field-username"><span class="badge badge-important mail-tag"></span>Obrigatório</label>
                </div>

                <div class="space"></div>
                <form method="post" class="form-horizontal" action="@Url.Content("~/Procedimento/DetalhamentoProcedimento")">
                    <input type="hidden" id="codigoProcedimento" name="codigoProcedimento" value="@Html.ValueFor(x => x.IdProcedimento)" />
                    <div class="tabbable">
                        <ul class="nav nav-tabs padding-16">
                            <li class="active">
                                <a data-toggle="tab" href="#edit-basic">
                                    <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                                    Cadastro
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content profile-edit-tab-content">
                        <div id="edit-basic" class="tab-pane in active">
                            <h4 class="header blue bolder smaller">Dados do Procedimento</h4>
                            <div class="vspace-12-sm"></div>


                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Nome do procedimento &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="nomeProcedimento" name="nomeProcedimento" placeholder="Nome do procedimento" value="@Html.ValueFor(x => x.Nome)" />
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Sigla &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="sigla" name="sigla" placeholder="Sigla" value="@Html.ValueFor(x => x.Sigla)" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Complemento</label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="complemento" name="complemento" placeholder="Complemento" value="@Html.ValueFor(x => x.Complemento)" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Código NEXO</label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="codigoNEXO" name="codigoNEXO" placeholder="Código NEXO" value="@Html.ValueFor(x => x.CODNEXO)" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Subgrupo &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input type="hidden" name="idSubGrupo" id="idSubGrupo" value="@Html.ValueFor(x => x.SubGrupo.IdSubGrupo)" />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="subGrupo" name="subGrupo" placeholder="Digite o nome do subgrupo" value="@Html.ValueFor(x => x.SubGrupo.Nome)" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Profissional preferencial</label>

                                <div class="col-sm-8">
                                    <input type="hidden" name="idProfissional" id="idProfissional" value="@Html.ValueFor(x => x.Profissional.IdProfissional)" />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="profissional" name="profissional" placeholder="Digite o nome do profissional" value="@Html.ValueFor(x => x.Profissional.NomeProfissional)" />
                                    </div>
                                </div>
                            </div>

                            <h4 class="header blue bolder smaller">Opções adicionais</h4>
                            <div class="vspace-12-sm"></div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Zerar automaticamente</label>

                                <div class="col-sm-8 ">
                                    <div class="checkbox">
                                        <label>
                                            <input name="zerarAutomaticamente" type="checkbox" class="ace" @checkedZerarAutomaticamente />
                                            <span class="lbl"> &nbsp;</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Confirmar automaticamente</label>

                                <div class="col-sm-8 ">
                                    <div class="checkbox">
                                        <label>
                                            <input name="confirmarAutomaticamente" type="checkbox" class="ace" @checkedConfirmarAutomaticamente />
                                            <span class="lbl"> &nbsp;</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix form-actions">
                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-info" type="submit">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Salvar
                                    </button>
                                    @if (ProcedimentoNovo)
                                    {
                                        <span>&nbsp; &nbsp;</span>
                                            <button class="btn" type="reset" id="limparForm">
                                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                                Limpar
                                            </button>
                                    }
                                    else
                                    {
                                        <span>&nbsp; &nbsp;</span>
                                            <a href="javascript:excluirProcedimento(@Model.IdProcedimento)" class="btn btn-danger" type="reset">
                                                <i class="ace-icon fa fa-times bigger-110"></i>
                                                Excluir
                                            </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div><!-- /.span -->
        </div>
    </div>
</div>

<div id="confirm" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Excluir Procedimento</h3>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir este Procedimento?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">
                    <i class="ace-icon fa fa-check"></i>
                    Sim
                </button>
                <button type="button" data-dismiss="modal" class="btn">
                    <i class="ace-icon fa fa-times"></i>
                    Não
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/assets/js/jquery-ui.min.js"></script>
<script src="/assets/js/bootstrap-datepicker.min.js"></script>
<script src="/assets/js/jquery.maskedinput.min.js"></script>
<script src="/assets/js/jquery.ui.touch-punch.min.js"></script>
<script src="/assets/js/ace-elements.min.js"></script>
<script src="/assets/js/ace.min.js"></script>
<script type="text/javascript">
    function excluirProcedimento(codigo) {
        confirmDeleteModal(codigo);
    }

    function confirmDeleteModal(codigo) {
        $('#confirm').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#delete', function () {
                window.location = "/Procedimento/ExcluirProcedimento?codigoProcedimento=" + codigo;
            });
    }

    $("#limparForm").click(function () {
        var cntreq3 = 0;
        var cntvals3 = 0;
        $(".componenteFormulario").each(atualizarProgressBar());
    });

    $(document).ready(function () {
        $('input').on('change', function () {
            var cntreq = 0;
            var cntvals = 0;
            $(".componenteFormulario").each(atualizarProgressBar());
        });

        var cntreq3 = 0;
        var cntvals3 = 0;
        $(".componenteFormulario").each(atualizarProgressBar());

    });

    function atualizarProgressBar() {
        var cntreq = 0;
        var cntvals = 0;
        $(".componenteFormulario").each(function (val) {
            cntreq++;
            if ($(this).val() != '') {
                cntvals++;
            }
        });
        var count = (cntvals / cntreq) * 100;
        count = parseInt(count);
        $('.formPercent').empty();
        $('.progress-striped').attr("data-percent", count + '%');
        $('div.progress-bar-success').attr("style", "width: " + count + '%');
        $('.formPercent').append(count + '% ');
    }

    $("#subGrupo").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/SubGrupo/BuscarSubGrupoAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        return { label: item.Name, value: item.Name, Id: item.Id };
                    }))

                }
            })
        },
        select: function (event, ui) {
            $('#idSubGrupo').attr('value', ui.item.Id);
            $('#subGrupo').val(ui.item.label);
            return false;
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#subGrupo').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idSubGrupo').attr('value', 0);  // clear the textbox
        }
    });

    $("#profissional").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/Profissional/BuscarProfissionalAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        return { label: item.Name, value: item.Name, Id: item.Id };
                    }))

                }
            })
        },
        select: function (event, ui) {
            $('#idProfissional').attr('value', ui.item.Id);
            $('#profissional').val(ui.item.label);
            return false;
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#profissional').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idProfissional').attr('value', 0);  // clear the textbox
        }
    });
</script>
