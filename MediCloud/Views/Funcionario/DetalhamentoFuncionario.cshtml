@model MediCloud.Models.Funcionario.FuncionarioModel
@{
    string checkedInativo = string.Empty;
    bool funcionarioNovo = true;

    ViewBag.Title = "Funcionários";

    if (Model != null)
    {
        checkedInativo = (Model.Inativo.HasValue ? Model.Inativo.Value : false) ? "checked" : string.Empty;
        funcionarioNovo = false;
    }
}
<script src="/assets/js/jquery-2.1.4.min.js"></script>
<div class="page-header">
    <h1>
        Detalhamento de funcionário
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Cadastro de funcionário
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="row">
    <div class="col-xs-12">
        <div id="user-profile-3" class="user-profile row">
            <div class="col-sm-offset-1 col-sm-10">
                <div class="well well-sm">
                    <!-- -
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    &nbsp; -->
                    <div class="inline middle blue bigger-110"> <span class="formPercent">0%</span> do cadastro concluído </div>

                    &nbsp; &nbsp; &nbsp;
                    <div style="width:200px;" data-percent="70%" class="inline middle no-margin progress progress-striped active pos-rel">
                        <div class="progress-bar progress-bar-success" style="width:70%"></div>
                    </div>

                </div><!-- /.well -->
                <div class="row">
                    <label class="col-sm-4 control-label no-padding-right" for="form-field-username"><span class="badge badge-important mail-tag"></span>Obrigatório</label>
                </div>

                <div class="space"></div>
                <form method="post" autocomplete="off" class="form-horizontal" action="@Url.Content("~/Funcionario/DetalhamentoFuncionario")">
                    <input type="hidden" id="codigoFuncionario" name="codigoFuncionario" value="@Html.ValueFor(x => x.IdFuncionario)" />
                    <div class="tabbable">
                        <ul class="nav nav-tabs padding-16">
                            <li class="active">
                                <a data-toggle="tab" href="#edit-basic">
                                    <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                                    Cadastro
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content profile-edit-tab-content">
                        <div id="edit-basic" class="tab-pane in active">
                            <h4 class="header blue bolder smaller">Dados do funcionário</h4>

                            <div class="row">
                                <div class="vspace-12-sm"></div>

                                <div class="col-xs-12 col-sm-8">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Nome completo &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="nomeCompleto" name="nomeCompleto" placeholder="nome do funcionário" value="@Html.ValueFor(x => x.NomeCompleto)" />
                                        </div>
                                    </div>

                                    <div class="space-4"></div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label no-padding-right" for="form-field-date">Data de nascimento</label>

                                        <div class="col-sm-9">
                                            <div class="input-medium">
                                                <div class="input-group">
                                                    <input class="input-medium date-picker input-mask-date" id="dataNascimento" name="dataNascimento" type="text" data-date-format="dd/mm/yyyy" placeholder="dd/mm/aaaa" value="@Html.ValueFor(x => x.DataNascimento)" />
                                                    <span class="input-group-addon">
                                                        <i class="ace-icon fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">RG </label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="RG" name="RG" placeholder="registro Geral" value="@Html.ValueFor(x => x.RG)" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">CTPS </label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="CTPS" name="CTPS" placeholder="número da carteira de tabalho" value="@Html.ValueFor(x => x.CTPS)" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Inativo</label>

                                <div class="col-sm-8 ">
                                    <div class="checkbox">
                                        <label>
                                            <input name="inativo" type="checkbox" class="ace" @checkedInativo />
                                            <span class="lbl"> &nbsp;</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="space"></div>
                            <h4 class="header blue bolder smaller">Identificação</h4>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Empresa &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input type="hidden" name="idEmpresa" id="idEmpresa" value="@Html.ValueFor(x => x.Empresa.IdCliente)" />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="ace-icon fa fa-search"></i>
                                        </span>
                                        <input class="col-xs-12 col-sm-6 componenteFormulario" type="text" id="empresa" name="empresa" placeholder="Digite o nome da empresa do funcionário" value="@Html.ValueFor(x => x.Empresa.NomeFantasia)" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Matrícula </label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="matricula" name="matricula" placeholder="matricula do funcionário" value="@Html.ValueFor(x => x.Matricula)" />
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Código Nexo </label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="codigoNexo" name="codigoNexo" placeholder="código NEXO" value="@Html.ValueFor(x => x.CodigoNexo)" />
                                </div>
                            </div>

                            <div class="space"></div>
                            <h4 class="header blue bolder smaller">Contato</h4>


                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Telefone fixo &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="telFixo" name="telFixo" placeholder="" value="@Html.ValueFor(x => x.TelFixo)" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Telefone móvel &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                <div class="col-sm-8">
                                    <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="telMovel" name="telMovel" placeholder="" value="@Html.ValueFor(x => x.TelMovel)" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-date">Endereço completo</label>
                                <div class="col-sm-12">
                                    <textarea class="col-sm-12 componenteFormulario" id="endereco" name="endereco" placeholder="endereço completo do funcionário">@Html.ValueFor(x => x.Endereco)</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Salvar
                            </button>
                            @if (funcionarioNovo)
                            {
                                <span>&nbsp; &nbsp;</span>
                                <button class="btn" type="reset" id="limparForm">
                                    <i class="ace-icon fa fa-undo bigger-110"></i>
                                    Limpar
                                </button>
                            }
                            else
                            {
                                <span>&nbsp; &nbsp;</span>
                                <a href="javascript:excluirFuncionario(@Model.IdFuncionario)" class="btn btn-danger" type="reset">
                                    <i class="ace-icon fa fa-times bigger-110"></i>
                                    Excluir
                                </a>
                            }
                        </div>
                    </div>
                </form>
            </div><!-- /.span -->
        </div>
    </div>
</div>

<div id="confirm" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Excluir usuário</h3>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir este usuário?
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">
                    <i class="ace-icon fa fa-check"></i>
                    Sim
                </button>
                <button type="button" data-dismiss="modal" class="btn">
                    <i class="ace-icon fa fa-times"></i>
                    Não
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/assets/js/jquery-ui.min.js"></script>
<script src="/assets/js/bootstrap-datepicker.min.js"></script>
<script src="/assets/js/jquery.maskedinput.min.js"></script>
<script src="/assets/js/jquery.ui.touch-punch.min.js"></script>
<script src="/assets/js/ace-elements.min.js"></script>
<script src="/assets/js/ace.min.js"></script>
<script type="text/javascript">
    function excluirFuncionario(codigo) {
        confirmDeleteModal(codigo);
    }

    function confirmDeleteModal(codigo) {
        $('#confirm').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#delete', function () {
                window.location = "/Funcionario/ExcluirFuncionario?codigoFuncionario=" + codigo;
            });
    }

    $('.date-picker').datepicker({
        format: 'dd/mm/yyyy',
        language: 'pt-BR',
    });
    $('.input-mask-date').mask('99/99/9999');

    $("#limparForm").click(function () {
        var cntreq3 = 0;
        var cntvals3 = 0;
        $(".componenteFormulario").each(atualizarProgressBar());
    });

    $("#empresa").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/Cliente/BuscaClienteAJAX",
                type: "POST",
                dataType: "json",
                data: { Prefix: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        return { label: item.Name, value: item.Name, Id: item.Id };
                    }))

                }
            })
        },
        select: function (event, ui) {
            $('#idEmpresa').attr('value', ui.item.Id);
            $('#empresa').val(ui.item.label);
            return false;
        },
        messages: {
            noResults: "Sem resultados", results: ""
        }
    });
    $('#empresa').on('blur', function () {
        if ($(this).val().length === 0) {  //check for no. of characters entered
            $('#idEmpresa').attr('value', 0);  // clear the textbox
        }
    });

    $(document).ready(function () {
        $('input').on('change', function () {
            var cntreq = 0;
            var cntvals = 0;
            $(".componenteFormulario").each(atualizarProgressBar());
        });

        var cntreq3 = 0;
        var cntvals3 = 0;
        $(".componenteFormulario").each(atualizarProgressBar());

    });

    function atualizarProgressBar() {
        var cntreq = 0;
        var cntvals = 0;
        $(".componenteFormulario").each(function (val) {
            cntreq++;
            if ($(this).val() != '') {
                cntvals++;
            }
        });
        var count = (cntvals / cntreq) * 100;
        count = parseInt(count);
        $('.formPercent').empty();
        $('.progress-striped').attr("data-percent", count + '%');
        $('div.progress-bar-success').attr("style", "width: " + count + '%');
        $('.formPercent').append(count + '% ');
    }

    $('#telFixo').mask('(99) 9999-9999');
    $('#telMovel').mask('(99) 99999-9999');
</script>
