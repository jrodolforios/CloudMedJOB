@using System.Linq

@model List<MediCloud.Models.Financeiro.NotaFiscalModel>
@{
    ViewBag.Title = "Notas Fiscais";
}
<div class="page-header">
    <h1>
        Notas Fiscais
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Busca de notas fiscais cadastrados
        </small>
    </h1>
</div>
<div id="NotaFiscalAlerts"></div>
<form method="post" action="@Url.Content("~/NotaFiscal")">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="input-group">
                <input type="text" class="form-control" name="keywords" placeholder="Digite aqui para buscar">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default no-border btn-sm">
                        <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="hr"></div>
@if (Model != null && Model.Any())
{
    foreach (MediCloud.Models.Financeiro.NotaFiscalModel item in Model)
    {
        <div class="col-xs-12" id="@item.IdNotaFiscal">
            <div class="media search-media">
                <div class="media-body">
                        <h4 class="media-heading">
                            <span class="blue">@item.RazaoSocial </span>
                        </h4>
                    <p><b>Data:</b> @(item.DataEmissao?.ToShortDateString())<br /><b>Valor:</b> @item.ValorTotal</p>

                    <div class="search-actions text-center">
                        <span class="blue bolder bigger-110">Ações</span>

                        <div class="action-buttons bigger-150">
                        </div>
                        <a href="/NotaFiscal/DetalhamentoNotaFiscal?codigoNotaFiscal=@item.IdNotaFiscal" class="search-btn-action btn btn-sm btn-block btn-info">Visualizar</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-block alert-info">
        Nenhum resultado para ser exibido.
    </div>
}

<script type="text/javascript">

</script>
