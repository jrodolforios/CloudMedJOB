                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Valor </label>

                        <div class="col-sm-8">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    R$
                                </span>
                                <input class="col-xs-12 col-sm-5" type="number" step="0.01" id="valorProcedimento" name="valorProcedimento" placeholder="Valor" value="" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="salvarContato">
                        <i class="ace-icon fa fa-check"></i>
                        Salvar
                    </button>
                    <button type="button" data-dismiss="modal" class="btn">
                        <i class="ace-icon fa fa-times"></i>
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



