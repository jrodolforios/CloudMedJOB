<script type="text/javascript">
    function excluirFornecedor(codigo) {
        confirmDeleteModal(codigo);
    }

    function excluirContato(codigo) {
        confirmDeleteModalContato(codigo);
    }

    function excluirProcedimento(codigo) {
        confirmDeleteModalProcedimento(codigo);
    }

    function confirmDeleteModalContato(codigo) {
        $('#confirmContato').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#deleteContato', function () {
                deletarContato(codigo);
            });
    }

    function confirmDeleteModalProcedimento(codigo) {
        $('#confirmContato').modal({
            backdrop: 'static',
            keyboard: false
        })
            .one('click', '#deleteContato', function () {
                deletarProcedimento(codigo);
            });
    }

    function detalhamentoDoContato(codigo) {
        $('#detalhamentoContato').modal({
            backdrop: 'static',
            keyboard: false
        })

        limparComponentesContato();
        if (codigo > 0) {
            $.ajax({
                url: '/Contato/DetalharContatoFornecedor?codigoDoContatoFornecedor=' + codigo,
                type: "post",
                cache: false,
                success: function (data) {
                    $("#nomeContato").attr('value', data.Nome);
                    $("#codigoContato").attr('value', data.IdContatoFornecedor);
                    $("#departamento").val(data.Departamento);
                    $("#funcao").attr('value', data.Funcao);
                    $("#telFixo").attr('value', data.TelFixo);
                    $("#telMovel").attr('value', data.TelMovel);
                    $("#email").attr('value', data.Email);
                    $("#dataNascimento").attr('value', toDateFromJson(data.DataNascimento));
                    $("#observacoesContato").val(data.Observacao);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    $('#usuarioAlerts').html('<div class="alert alert-danger"><a class="close" data-dismiss="alert">×</a><span>Ops! Não foi possível detalhar este registro no servidor. Contate-nos para que possamos te ajudar melhor.</span></div>')
                }
            });
        }
    }

    function detalhamentoDoProcedimento(codigo) {
        $('#detalhamentoProcedimento').modal({
            backdrop: 'static',
            keyboard: false
        })

        limparComponentesFornecedor();
        if (codigo > 0) {
            $.ajax({
                url: '/Fornecedor/DetalharProcedimentoFornecedor?codigoDoProcedimentoFornecedor=' + codigo + "&codigoFornecedor=" + @Html.ValueFor(x => x.IdFornecedor),
                type: "post",
                cache: false,
                success: function (data) {
