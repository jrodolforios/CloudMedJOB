@model MediCloud.Models.Fornecedor.FornecedorModel
@{
    string checkedInativo = string.Empty;
    bool FornecedorNovo = true;
    string checkedFornecedorProcedimentos = string.Empty;

    ViewBag.Title = "Fornecedor";

    if (Model != null)
    {
        checkedFornecedorProcedimentos = Model.FornecedorDeProcedimentos.HasValue ? (Model.FornecedorDeProcedimentos.Value ? "checked" : string.Empty) : string.Empty;
        FornecedorNovo = false;
    }
}
<script src="/assets/js/jquery-2.1.4.min.js"></script>
<div class="page-header">
    <h1>
        Detalhamento de Fornecedor
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Cadastro de Fornecedor
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="row">
    <div class="col-xs-12">
        <div id="user-profile-3" class="user-profile row">
            <div class="col-sm-offset-1 col-sm-10">
                <div class="well well-sm">
                    <!-- -
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    &nbsp; -->
                    <div class="inline middle blue bigger-110"> <span class="formPercent">0%</span> do cadastro concluído </div>

                    &nbsp; &nbsp; &nbsp;
                    <div style="width:200px;" data-percent="70%" class="inline middle no-margin progress progress-striped active pos-rel">
                        <div class="progress-bar progress-bar-success" style="width:70%"></div>
                    </div>

                </div><!-- /.well -->
                <div class="row">
                    <label class="col-sm-4 control-label no-padding-right" for="form-field-username"><span class="badge badge-important mail-tag"></span>Obrigatório</label>
                </div>

                <div class="space"></div>
                <form method="post" class="form-horizontal" action="@Url.Content("~/Fornecedor/DetalhamentoFornecedor")">
                    <input type="hidden" id="codigoFornecedor" name="codigoFornecedor" value="@Html.ValueFor(x => x.IdFornecedor)" />
                    <div class="tabbable">
                        <ul class="nav nav-tabs padding-16">
                            <li class="active">
                                <a data-toggle="tab" href="#edit-basic">
                                    <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                                    Cadastro
                                </a>
                            </li>

                            <li>
                                <a data-toggle="tab" href="#edit-contact">
                                    <i class="blue ace-icon fa fa-users bigger-125"></i>
                                    Contatos
                                </a>
                            </li>

                            <li>
                                <a data-toggle="tab" href="#edit-procedure">
                                    <i class="orange ace-icon fa fa-cog bigger-125"></i>
                                    Procedimentos
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content profile-edit-tab-content">
                        <div id="edit-basic" class="tab-pane in fade active">
                            <h4 class="header blue bolder smaller">Dados do Fornecedor</h4>

                            <div class="row">
                                <div class="vspace-12-sm"></div>

                                <div class="col-xs-12 col-sm-8">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Razão Social &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="razaoSocial" name="razaoSocial" placeholder="Razão social" value="@Html.ValueFor(x => x.RazaoSocial)" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Nome Fantasia &nbsp;<span class="badge badge-important mail-tag"></span></label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="nomeFantasia" name="nomeFantasia" placeholder="Nome fantasia" value="@Html.ValueFor(x => x.NomeFantasia)" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Código do banco</label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="number" id="codigoBanco" name="codigoBanco" placeholder="Código do banco" value="@Html.ValueFor(x => x.CodigoBanco)" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Código da agência (com digito verificador - apenas números)</label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="number" id="codigoAgencia" name="codigoAgencia" placeholder="Código da agência" value="@Html.ValueFor(x => x.CodigoAgencia)" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Conta corrente (com digito verificador - apenas números)</label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="number" id="contaCorrente" name="contaCorrente" placeholder="Conta corente" value="@Html.ValueFor(x => x.ContaCorrente)" />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">Tipo da conta</label>

                                        <div class="col-sm-8">
                                            <select class="chosen-select form-control" id="tipoConta" name="tipoConta" data-placeholder="Selecione um...">
                                                <option value="0">.:Selecione:.</option>
                                                <option value="1">Corrente</option>
                                                <option value="2">Poupança</option>
                                            </select>
                                            <script type="text/javascript">
                                                $('#tipoConta').val('@(Model != null ? (int)Model.TipoConta : 0)');
                                            </script>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Fornecedor de procedimentos</label>

                                        <div class="col-sm-8 ">
                                            <div class="checkbox">
                                                <label>
                                                    <input name="fornecedorDeProcedimentos" type="checkbox" class="ace" @checkedFornecedorProcedimentos />
                                                    <span class="lbl"> &nbsp;</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label no-padding-right" for="form-field-username">CNPJ</label>

                                        <div class="col-sm-8">
                                            <input class="col-xs-12 col-sm-8 componenteFormulario" type="text" id="CNPJ" name="CNPJ" placeholder="Conta corente" value="@Html.ValueFor(x => x.CNPJ)" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix form-actions">
                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-info" type="submit">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Salvar
                                    </button>
                                    @if (FornecedorNovo)
                                    {
                                        <span>&nbsp; &nbsp;</span>
                                        <button class="btn" type="reset" id="limparForm">
                                            <i class="ace-icon fa fa-undo bigger-110"></i>
                                            Limpar
                                        </button>
                                    }
                                    else
                                    {
                                        <span>&nbsp; &nbsp;</span>
                                        <a href="javascript:excluirFornecedor(@Model.IdFornecedor)" class="btn btn-danger" type="reset">
                                            <i class="ace-icon fa fa-times bigger-110"></i>
                                            Excluir
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>

                        <div id="edit-contact" class="tab-pane in fade">
                            <div class="space-10"></div>
                            <a href="javascript:detalhamentoDoContato(0)" class="btn btn-xs">+ Novo contato</a>
                            @if (Model != null && Model.ContatosFornecedor != null && Model.ContatosFornecedor.Any())
                            {
                                foreach (MediCloud.Models.Fornecedor.ContatoFornecedorModel item in Model.ContatosFornecedor)
                                {
                                    <div class="row">
                                        <div class="col-xs-12" id="@item.IdContatoFornecedor">
                                            <div class="media search-media">
                                                <div class="media-left">
                                                    <a href="#">
                                                        <img class="media-object" data-src="holder.js/72x72" alt="72x72" src="/assets/images/avatars/contact.png" data-holder-rendered="true" style="width: 72px; height: 72px;">
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <div class="container">
                                                        <h4 class="media-heading">
                                                            <span class="blue">@item.Nome </span>
                                                        </h4>
                                                    </div>
                                                    <p><b>Celular:</b> @item.TelMovel <br /> <b>Fixo:</b> @item.TelFixo</p>

                                                    <div class="search-actions text-center">
                                                        <span class="blue bolder bigger-110">Ações</span>

                                                        <div class="action-buttons bigger-150">
                                                            <a href="javascript:excluirContato(@item.IdContatoFornecedor);">
                                                                <i class="ace-icon fa fa-trash"></i>
                                                            </a>
                                                        </div>
                                                        <a href="javascript:detalhamentoDoContato(@item.IdContatoFornecedor)" class="search-btn-action btn btn-sm btn-block btn-info">Editar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-block alert-info">
                                    Nenhum contato para ser exibido.
                                </div>
                            }

                        </div>

                        <div id="edit-procedure" class="tab-pane in fade">
                            <div class="space-10"></div>
                            <a href="javascript:detalhamentoDoProcedimento(0)" class="btn btn-xs">+ Novo procedimento</a>
                            @if (Model != null && Model.ProcedimentosFornecedor != null && Model.ProcedimentosFornecedor.Any())
                            {
                                foreach (MediCloud.Models.Fornecedor.FornecedorProcedimento item in Model.ProcedimentosFornecedor)
                                {
                                    <div class="row">
                                        <div class="col-xs-12" id="@item.Procedimento.IdProcedimento">
                                            <div class="media search-media">
                                                <div class="media-body">
                                                        <h4 class="media-heading">
                                                            <span class="blue">@item.Procedimento.Nome </span>
                                                        </h4>
                                                    <p><b>Valor:</b> @item.Valor <br /> <br/> </p>

                                                    <div class="search-actions text-center">
                                                        <span class="blue bolder bigger-110">Ações</span>

                                                        <div class="action-buttons bigger-150">
                                                            <a href="javascript:excluirProcedimento(@item.Procedimento.IdProcedimento);">
                                                                <i class="ace-icon fa fa-trash"></i>
                                                            </a>
                                                        </div>
                                                        <a href="javascript:detalhamentoDoProcedimento(@item.Procedimento.IdProcedimento)" class="search-btn-action btn btn-sm btn-block btn-info">Editar</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-block alert-info">
                                    Nenhum contato para ser exibido.
                                </div>
                            }

                        </div>

                    </div>
                </form>
            </div><!-- /.span -->
        </div>
    </div>
</div>

