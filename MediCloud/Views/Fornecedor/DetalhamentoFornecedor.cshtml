<div id="detalhamentoContato" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="smaller lighter blue no-margin">Contato de fornecedor</h3>
            </div>
            <form method="post" id="formContatoCliente" class="form-horizontal" action="@Url.Content("~/Fornecedor/SalvarContato")">
                <div class="modal-body">
                    <input type="hidden" id="codigoContato" name="codigoContato" value="0" />
                    <input type="hidden" id="codigoFornecedorContato" name="codigoFornecedorContato" value="@Html.ValueFor(x => x.IdFornecedor)" />

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Nome &nbsp;<span class="badge badge-important mail-tag"></span></label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-6 " type="text" id="nomeContato" name="nomeContato" placeholder="nome do contato" value="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Departamento &nbsp;<span class="badge badge-important mail-tag"></span></label>

                        <div class="col-sm-8">
                            <select class="form-control" id="departamento" name="departamento">
                                <option value="0">..:Selecione:..</option>
                                <option value="1">Administrativo</option>
                                <option value="6">Cobrança</option>
                                <option value="2">Comercial</option>
                                <option value="8">Contratos</option>
                                <option value="4">Financeiro</option>
                                <option value="3">Jurídico</option>
                                <option value="7">Diretoria</option>
                                <option value="5">Outros</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Função &nbsp;<span class="badge badge-important mail-tag"></span></label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-6 " type="text" id="funcao" name="funcao" placeholder="Função do contato" value="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Tel. Fixo </label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-6 " type="text" id="telFixo" name="telFixo" placeholder="número do telefone" value="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">Tel. Móvel </label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-6 " type="text" id="telMovel" name="telMovel" placeholder="número do celular" value="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-first">E-mail </label>

                        <div class="col-sm-8">
                            <input class="col-xs-12 col-sm-6 " type="text" id="email" name="email" placeholder="Endereço de email" value="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label no-padding-right" for="form-field-date">Data de nascimento</label>

                        <div class="col-sm-8">
                            <div class="input-medium">
                                <div class="input-group">
                                    <input class="input-medium date-picker input-mask-date" id="dataNascimento" name="dataNascimento" type="text" data-date-format="dd/mm/yyyy" placeholder="dd/mm/yyyy" value="" />
                                    <span class="input-group-addon">
                                        <i class="ace-icon fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-date">Observações</label>
                        <div class="col-sm-12">
                            <textarea class="col-sm-12" id="observacoesContato" name="observacoesContato" placeholder="observações adicionais"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="salvarContato">
                        <i class="ace-icon fa fa-check"></i>
                        Salvar
                    </button>
                    <button type="button" data-dismiss="modal" class="btn">
                        <i class="ace-icon fa fa-times"></i>
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

